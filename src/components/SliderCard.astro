---

export interface props {
    title: string;
    text: string;
    src: string;
}

const {title, text, src} = Astro.props;
---

<div class="flex flex-col items-center text-center h-32 w-32 bg-wb-dark-gray rounded-lg p-8 hover:bg-wb-pale-peach">
    <h1 class="font-semibold mb-4">{title}</h1>
    <p>
        {text}
    </p>
</div>